{
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": true,
    "outDir": "build",
    "rootDir": "src",
  },
  "exclude": ["node_modules"]
}
